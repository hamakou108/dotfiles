[user]
	useConfigOnly = true
[core]
	editor = nvim
	quotepath = false
	autocrlf = false
	ignorecase = false
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[merge]
	tool = vimdiff
[pull]
	ff = only
[diff]
	wsErrorHighlight = all
	tool = vimdiff
[color "diff"]
	whitespace = red reverse
	meta = 11
	frag = magenta bold
	func = 146 bold
	commit = yellow bold
	old = red bold
	new = green bold
[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[gpg]
	format = ssh
[commit]
	gpgsign = true

[include]
	path = .gitconfig.local
